<a href="/">Search Again</a>
<div class="container">
    <form action="/result" method="POST">
        <div class="form-group">
            <label for="search-topics">Enter Search Topics</label>
            <input type="text" name="input" class="form-control" id="search-bar" placeholder="Search">
        </div>
        <div class="row">
            <button type="submit" class="btn btn-sm btn-primary">Submit</button>
        </div>
        <div class="form-group">
            <div id="lang-btns" class="btn-lg btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="java" value="java"> Java
                </label>
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="python" value="python"> Python
                </label>
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="c++" value="c++"> C++
                </label>
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="html" value="html"> HTML
                </label>
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="python" value="css"> CSS
                </label>
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="js" value="js"> JavaScript
                </label>
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="ruby" value="ruby"> Ruby
                </label>
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="php" value="php"> PHP
                </label>
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="c#" value="c#"> C#
                </label>
                <label class="btn btn-info active">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="all" checked> Any
                </label>
            </div>
        </div>
    </form>

    <h3>Total Results: {{total_count}}</h3>

    {{#each body.items as |repo|}}
          <div class="card">
            <h1 class="repo-name">{{repo.name}}</h1>
            <img class="card-image" src="{{repo.owner.avatar_url}}" /><h4 class="center">{{repo.owner.login}}</h4>
            <h5 class="center">Description: {{repo.description}}</h5>
            <div class="card-container">
              <h6 class="center">Language: {{repo.language}}</h6>
              <h6 class="center">License: {{repo.license.name}}</h6>
              <h6 class="center">Created: {{repo.created_at}}</h6>
              <h6 class="center">Last Updated: {{repo.updated_at}}</h6>
              <h6 class="center">Stars: {{repo.stargazers_count}}</h6>
              <h6 class="center">Forks: {{repo.forks}}</h6>
              <h6 class="center"><a href="{{repo.html_url}}">{{repo.html_url}}</a></h6>
            </div>
          </div>
    {{/each}}
</div>
