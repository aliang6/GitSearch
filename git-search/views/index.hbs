<div>
  <h1>{{title}}</h1>
  <div class="container input" id = "search-form">
    <form action="/results" method="POST">

        <div class="form-group">
            <input type="text" placeholder="Search Projects..." class="search">
            <button type ="submit" name="input" class="button" value=""><img src = "resources/Minimal-Magnifying-Glass.png" alt = "magnifying glass"></button>
        </div>

        <h2>Language:</h2>
        <div class="form-group">
            <div id="lang-btns" class="btn-lg btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="java" value="java"> Java
                </label>
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="python" value="python"> Python
                </label>
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="c++" value="c++"> C++
                </label>
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="html" value="html"> HTML
                </label>
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="python" value="css"> CSS
                </label>
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="js" value="javascript"> JavaScript
                </label>
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="ruby" value="ruby"> Ruby
                </label>
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="php" value="php"> PHP
                </label>
                <label class="btn btn-info">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="c#" value="c#"> C#
                </label>
                <label class="btn btn-info active">
                    <input type="radio" class="btn btn-lg btn-info" name="lang" autocomplete="off" id="all"> Any
                </label>
            </div>
        </div>
        <h2>License:</h2>
        <div class="form-group">
          <div class="btn-lg btn-group-toggle" data-toggle="button">
            <label class="btn btn-info">
              <input type="radio" class="btn btn-lg btn-info" name="license" autocomplete="off" id="MIT" value="mit"> MIT License
            </label>
            <label class="btn btn-info">
              <input type="radio" class="btn btn-lg btn-info" name="license" autocomplete="off" id="GNU" value="lgpl-3.0"> GNU GPLv3
            </label>
            <label class="btn btn-info">
              <input type="radio" class="btn btn-lg btn-info" name="license" autocomplete="off" id="Apache" value="apache-2.0"> Apache License 2.0
            </label>
            <label class="btn btn-info">
              <input type="radio" class="btn btn-lg btn-info" name="license" autocomplete="off" id="none" value="none"> None
            </label>
            <label class="btn btn-info active">
              <input type="radio" class="btn btn-lg btn-info" name="license" autocomplete="off" id="any-license"> Any
            </label>
          </div>
      </div>
    </form>

  </div>
</div>
